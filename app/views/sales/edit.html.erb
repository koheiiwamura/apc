<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "ポイント管理システム", root_path, class:"brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "販売一覧", sales_path %></li>
          <li class="active"><a href="#">About</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
  <div class="container">

  <%= form_for(@sale, html: {id: 'item_form', class:"well form-search"}) do |f| %>
    <label for="good">商品：</label>
    <%= select_tag 'goods_name', options_from_collection_for_select(@goods, :goods_name, :goods_name, { :selected => @sale_detail.good.goods_name })  %>
    <br/>

    <label for="store">販売店：</label>
    <%= select_tag 'storename', options_from_collection_for_select(@stores, :storename, :storename, { :selected => @sale.store.storename })  %>
    <br/>

    <label for="date">発生ポイント：</label>
    <%= text_field_tag "sale_point", @sale_detail.sale_point %>
    <br/>

    <label for="date">商品単価：</label>
    <%= text_field_tag "sale_price",@sale_detail.sale_price %>
    <br/>

    <label>商品画像<br/>
        <%= file_field :goods_picture,"", width:"100px", height:"100px", alt:"" %>
    </label>
    <br/>

    <div align="right">
      <%= f.submit "確定", class:"btn" %>
    </div>
  <% end %>
</div> <!-- /container -->
